pipeline {
    agent {
        kubernetes {
            label 'k8s-docker-agent'
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: circuit-scan-builder
spec:
  containers:
  - name: docker
    image: docker:27-dind
    securityContext:
      privileged: true
    args:
      - --insecure-registry=docker-registry.docker-registry.svc.cluster.local:5000
      - --registry-mirror=https://registry-1.docker.io
    env:
      - name: DOCKER_TLS_CERTDIR
        value: ""
  - name: jnlp
    image: jenkins/inbound-agent:latest
"""
        }
    }
    environment {
        REGISTRY = 'docker-registry.docker-registry.svc.cluster.local:5000'
        IMAGE_NAME = "${REGISTRY}/circuit-scan:latest"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Network Test') {
            steps {
                container('docker') {
                    script {
                        // Install curl
                        sh "apk update && apk add --no-cache curl"
                        // Perform a HEAD request to PyPI to check connectivity
                        sh "curl -I https://pypi.org"
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                container('docker') {
                    script {
                        sh 'docker info'
                        sh "docker build -t ${IMAGE_NAME} ."
                    }
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                container('docker') {
                    script {
                        // Add a docker login step here if your registry requires authentication
                        sh "docker push ${IMAGE_NAME}"
                    }
                }
            }
        }
    }
}