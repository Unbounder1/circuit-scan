pipeline {
    agent {
        kubernetes {
            label 'circuit-scan-ci'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: circuit-scan
spec:
  containers:
    - name: kaniko
      image: gcr.io/kaniko-project/executor:latest
      command:
        - cat
      tty: true
      volumeMounts:
        - name: kaniko-cache
          mountPath: /kaniko/cache
  volumes:
    - name: kaniko-cache
      emptyDir: {}
"""
        }
    }

    environment {
        DOCKER_HUB_REPO = "docker-registry.docker-registry.svc.cluster.local:5000/circuit-scan:latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                container('kaniko') {
                    checkout scm
                }
            }
        }

        stage('Build & Push Image') {
            steps {
                container('kaniko') {
                    sh '''
                    /kaniko/executor \
                      --dockerfile=Dockerfile \
                      --destination=$DOCKER_HUB_REPO \
                      --context=dir://workspace
                    '''
                }
            }
        }
    }
}